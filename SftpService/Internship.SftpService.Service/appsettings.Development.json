{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "JobConfig": {
    "DownloadJob": {
      "JobKey": "DownloadFilesJob",
      "WithIdentity": "DownloadFilesJob-trigger",
      "StartAt": "DateTimeOffset.Now",
      "CronSchedule": "0/15 * * * * ?"
    },
    "UploadJob": {
      "JobKey": "UploadFilesJob",
      "WithIdentity": "UploadFilesJob-trigger",
      "StartAt": "DateTimeOffset.Now",
      "CronSchedule": "0/15 * * * * ?"
    }
  },
  "PathConfig": {
    "DownloadFiles": {
      "To": "./downloads/",
      "From": "upload/out/",
      "RemoveAfter": true
    },
    "UploadFiles": {
      "To": "upload/in/",
      "From": "./downloads/",
      "RemoveAfter": false
    }
  }
}
